# n8n + CLI Tools Configuration
# Copy this file to .env and fill in the values

# ===================
# n8n Settings
# ===================

# Host and port configuration
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http

# Webhook URL (for external triggers)
# For local development: http://localhost:5678/
# For production: https://your-domain.com/
WEBHOOK_URL=http://localhost:5678/

# Authentication (REQUIRED for security)
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=your-secure-password-here

# Encryption key for credentials (generate with: openssl rand -hex 32)
N8N_ENCRYPTION_KEY=

# Timezone
TIMEZONE=America/Costa_Rica

# ===================
# CLI Tools Settings
# ===================

# Check for updates on container start (notify only)
CLI_TOOLS_UPDATE_CHECK=true

# Automatically install updates on container start
CLI_TOOLS_AUTO_UPDATE=false

# ===================
# API Keys
# ===================

# Google AI API Key (for imagen-cli)
GOOGLE_AI_API_KEY=

# ===================
# Database (Optional)
# ===================
# Uncomment and configure if using PostgreSQL instead of SQLite

# POSTGRES_USER=n8n
# POSTGRES_PASSWORD=your-secure-password
# POSTGRES_DB=n8n
