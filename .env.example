# n8n + CLI Tools Configuration
# Copy this file to .env and fill in the values
#
# Quick setup:
#   cp .env.example .env
#   # Then edit the REQUIRED values below

# =====================================================
# REQUIRED - You must set these before starting
# =====================================================

# Admin credentials (used to login to n8n)
N8N_ADMIN_USER=admin
N8N_ADMIN_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD

# Encryption key for storing credentials securely
# Generate with: openssl rand -hex 32
N8N_ENCRYPTION_KEY=GENERATE_WITH_openssl_rand_-hex_32

# =====================================================
# n8n Settings (Optional)
# =====================================================

# Host and port configuration
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http

# Webhook URL (for external triggers)
# Local: http://localhost:5678/
# Production: https://your-domain.com/
WEBHOOK_URL=http://localhost:5678/

# Timezone
TIMEZONE=America/Costa_Rica

# Disable telemetry/diagnostics
N8N_DIAGNOSTICS_ENABLED=false

# =====================================================
# CLI Tools Settings
# =====================================================

# Check for updates on container start (notify only)
CLI_TOOLS_UPDATE_CHECK=true

# Automatically install updates on container start
CLI_TOOLS_AUTO_UPDATE=false

# =====================================================
# API Keys (Optional - for specific tools)
# =====================================================

# Google AI API Key (required for genimg/imagen-cli)
GOOGLE_AI_API_KEY=

# =====================================================
# Database (Optional - for production)
# =====================================================
# Uncomment to use PostgreSQL instead of SQLite

# POSTGRES_USER=n8n
# POSTGRES_PASSWORD=your-secure-password
# POSTGRES_DB=n8n
